<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="float: left; display: inline-block;">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" style="float: left; display: inline-block;">
    <%= form.label :description %>
    <%= form.text_field :description %> <!-- <=元々は text_area で構成 -->
  </div>

   <div class="field" style="display: inline;">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field" style="display: inline;">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

    <div class="actions" style="color: white;">
      <%= form.submit style:"border-radius: 5px; background-color: black;" %>
    </div>
<% end %>
