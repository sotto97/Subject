<h2>Editing Book</h2>
<%= form_for(@book, url: "/books/#{@book.id}") do |f| %>

	<div class="field">
		<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
		</p>
	</div>

	<div class="field">
		<p>
		<%= f.label :opinion %><br>
		<%= f.text_area :body %>
		</p>
	</div>

	<div class="field">
		<p>
		<%= f.submit 'Update Book' %>
		</p>
	</div>

<% end %>