<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="header" id=header style="background-color: #222; color: white;">
      <p><strong>Bookers</strong></p>
        <ul class="list-inline" style="color: #333; text-align: right;">
          <% if user_signed_in? %>
            <li class="#" style="padding: 15px;">
              <%= link_to "Home", user_path(current_user.id) %>
            </li>
            <li class="#">
              <%= link_to "Users", users_path %>
            </li>
            <li class="#">
              <%= link_to "Books", books_path %>
            </li>
            <li class="#">
              <%= link_to "Logout", destroy_user_session_path, method: "delete" %>
            </li>
          <% else %>
            <li class="#">
              <%= link_to "Home", root_path %>
            </li>
            <li class="#">
              <%= link_to "About", home_about_path %>
            </li>
            <li class="#">
              <%= link_to "Signup", new_user_registration_path %>
            </li>
            <li class="#">
              <%= link_to "Log in", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
      <%= yield %>

      <footer>
        <div class="col-xs-3 col-xs-offset-9">
          <p style="text-align: right; padding: 0 15px;">CopyRight Infratop.inc</p>
        </div>
      </footer>
  </body>
</html>
