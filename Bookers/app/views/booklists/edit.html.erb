<h1>Editing book</h1>
<%= form_for(@list, url: "/booklists/#{@list.id}") do |f| %>

	<div class="field">
		<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
		</p>
	</div>

	<div class="field">
		<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
		</p>
	</div>

	<div class="field">
		<p>
		<%= f.submit 'Update Book' %>
		</p>
	</div>

<% end %>

<p class="space">
<a><%= link_to "Show", booklist_path(@list) %></a>
&thinsp;|&thinsp;
<a><%= link_to "Back", booklists_path %></a>
</p>